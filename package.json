{
  "name": "dscbot",
  "version": "1.0.0",
  "description": "Bot Discord avec direction artistique moderne inspirÃ©e de bleed",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node deploy-commands.js; node src/index.js",
    "dev": "node --watch src/index.js",
    "callback": "node src/callback-server.js",
    "start:all": "node src/callback-server.js & node src/index.js",
    "setup": "node src/setup.js",
    "deploy": "node deploy-commands.js",
    "clear:commands": "node clear-commands.js",
    "deploy:full": "node clear-commands.js && node deploy-commands.js",
    "pm2:start": "pm2 delete dscbot 2>/dev/null; pm2 start src/index.js --name dscbot",
    "pm2:stop": "pm2 stop dscbot",
    "pm2:restart": "pm2 restart dscbot",
    "pm2:logs": "pm2 logs dscbot","pm2:kill":"pm2 delete all 2>/dev/null; rm -f /tmp/dscbot.lock .dscbot.lock"
  },
  "keywords": [
    "discord",
    "bot",
    "discord.js"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "archiver": "^7.0.1",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "groq-sdk": "^0.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
